<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_layout"
        android:background="@drawable/image_background"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/itemTextColor"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/image_layout"
        android:background="@drawable/wallet_background"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pos_text"
            android:textColor="@android:color/black"
            android:paddingBottom="5dp"
            android:layout_margin="3dp"
            android:maxLines="1"
            />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/business_name"
            android:layout_below="@+id/pos_text"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_marginStart="3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_below="@+id/business_name"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_alignParentBottom="true"
            android:gravity="start"
            />

    </RelativeLayout>

</RelativeLayout>